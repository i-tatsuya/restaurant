<% @page_title = "お知らせ一覧" %>
<h1><%= @page_title %></h1>


<% if @articles.present? %>
  <% @articles.each do |article| %>
<h2><%= link_to article.title, article %></h2>
<p><%= truncate(article.contents, length: 80) %>
<%= link_to "もっと読む", article %></p>
<p class="article_footer">
<%= article.start_date.strftime("%Y/%m/%d %H:%M") %></p>
  <% end %>
<%= will_paginate @articles %>

<% else %>
<p>ニュースがありません。</p>
<% end %>

