<%= render "shared/errors", obj: @user %>

<table class="attr">
  <tr>
    <th><%= form.label :user_name %></th>
    <td><%= form.text_field :user_name %></td>
  </tr>
  <tr>
    <th><%= form.label :birthday, for: "user_birthday_1i" %></th>
    <td><%= form.date_select :birthday,
            start_year: 1940, end_year: Time.now.year,
            use_month_numbers: true %>
    </td>
  </tr>
  <tr>
    <th><%= form.label :address %></th>
    <td><%= form.text_field :address %></td>
  </tr>
  <tr>
    <th><%= form.label :mail_address %></th>
    <td><%= form.text_field :mail_address %></td>
  </tr>
  <tr>
    <th><%= form.label :phone_number %></th>
    <td><%= form.text_field :phone_number %></td>
  </tr>
  <tr>
    <th><%= form.label :password %></th>
    <td><%= form.password_field :password %></td>
  </tr>
  <tr>
       <th><%= form.label :password_confirmation %></th>
       <td><%= form.password_field :password_confirmation %></td>
  </tr>
</table>

<% unless @user.new_record? %>
<p>パスワードを変更しないときは、パスワード入力欄を空にしてください。</p>
<% end %>
